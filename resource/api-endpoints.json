  "idFormats": {
    "mongodb": {
      "format": "24-character hex string",
      "example": "507f1f77bcf86cd799439011"
    },
    "uuid": {
      "format": "36-character UUID with dashes",
      "example": "2ef41115-a6f8-47f1-8977-8e6ba2dd573a"
    }
  },
  "dateFormat": {
    "standard": "ISO 8601",
    "validExamples": [
      "2024-06-20T14:30:00Z",
      "2024-06-20T14:30:00.000Z",
      "2024-06-20T14:30:00+07:00"
    ],
    "invalidExamples": [
      "2024-06-20",
      "20/06/2024",
      "June 20, 2024"
    ]
  },
