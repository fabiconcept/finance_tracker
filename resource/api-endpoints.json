    {
      "name": "Get Transaction by ID",
      "endpoint": "/transactions/:id",
      "method": "GET",
      "description": "Retrieves a single transaction by its ID (MongoDB ObjectId or UUID)",
      "urlParams": {
        "id": "507f1f77bcf86cd799439011 or 2ef41115-a6f8-47f1-8977-8e6ba2dd573a"
      },
      "payload": null,
      "response": {
        "success": true,
        "data": {
          "id": "507f1f77bcf86cd799439011",
          "title": "Monthly Salary",
          "amount": 15000000,
          "type": "income",
          "category": "Salary",
          "date": "2024-06-15T10:30:00.000Z",
          "note": "June 2024 salary"
        },
        "message": "Transaction retrieved successfully",
        "timestamp": "2024-06-20T14:30:00.000Z"
      },
      "errorResponses": [
        {
          "status": 400,
          "response": {
            "success": false,
            "error": "Invalid id format",
            "timestamp": "2024-06-20T14:30:00.000Z"
          }
        },
        {
          "status": 404,
          "response": {
            "success": false,
            "error": "Transaction not found",
            "timestamp": "2024-06-20T14:30:00.000Z"
          }
        }
      ]
    },
    {
      "name": "Create Transaction",
      "endpoint": "/transactions",
      "method": "POST",
      "description": "Creates a new transaction",
      "payload": {
        "title": "Freelance Project",
        "amount": 5000000,
        "type": "income",
        "category": "Freelance",
        "date": "2024-06-20T10:00:00Z",
        "note": "Website development project"
      },
      "payloadSchema": {
        "title": {
          "type": "string",
          "required": true,
          "validation": "Non-empty string"
        },
        "amount": {
          "type": "number",
          "required": true,
          "validation": "Positive number (> 0)"
        },
        "type": {
          "type": "string",
          "required": true,
          "validation": "Must be 'income' or 'expense'"
        },
        "category": {
          "type": "string",
          "required": true,
          "validation": "Non-empty string"
        },
        "date": {
          "type": "string",
          "required": true,
          "validation": "ISO 8601 date format"
        },
        "note": {
          "type": "string",
          "required": false,
          "validation": "Optional string"
        }
      },
      "response": {
        "success": true,
        "data": {
          "id": "507f1f77bcf86cd799439011",
          "title": "Freelance Project",
          "amount": 5000000,
          "type": "income",
          "category": "Freelance",
          "date": "2024-06-20T10:00:00.000Z",
          "note": "Website development project"
        },
        "message": "Transaction created successfully",
        "timestamp": "2024-06-20T14:30:00.000Z"
      },
      "errorResponses": [
        {
          "status": 400,
          "response": {
            "success": false,
            "error": "Validation failed",
            "details": [
              {
                "field": "amount",
                "message": "amount must be a positive number"
              },
              {
                "field": "type",
                "message": "type must be 'income' or 'expense'"
              }
            ],
            "timestamp": "2024-06-20T14:30:00.000Z"
          }
        }
      ]
    },
    {
      "name": "Update Transaction",
      "endpoint": "/transactions/:id",
      "method": "PATCH",
      "description": "Updates an existing transaction. Only provided fields will be updated",
      "urlParams": {
        "id": "507f1f77bcf86cd799439011 or 2ef41115-a6f8-47f1-8977-8e6ba2dd573a"
      },
      "payload": {
        "title": "Updated Freelance Project",
        "amount": 5500000,
        "note": "Updated payment amount"
      },
      "payloadSchema": {
        "title": {
          "type": "string",
          "required": false,
          "validation": "Non-empty string if provided"
        },
        "amount": {
          "type": "number",
          "required": false,
          "validation": "Positive number if provided"
        },
        "type": {
          "type": "string",
          "required": false,
          "validation": "'income' or 'expense' if provided"
        },
        "category": {
          "type": "string",
          "required": false,
          "validation": "Non-empty string if provided"
        },
        "date": {
          "type": "string",
          "required": false,
          "validation": "ISO 8601 format if provided"
        },
        "note": {
          "type": "string",
          "required": false,
          "validation": "String if provided"
        }
      },
      "response": {
        "success": true,
        "data": {
          "id": "507f1f77bcf86cd799439011",
          "title": "Updated Freelance Project",
          "amount": 5500000,
          "type": "income",
          "category": "Freelance",
          "date": "2024-06-20T10:00:00.000Z",
          "note": "Updated payment amount"
        },
        "message": "Transaction updated successfully",
        "timestamp": "2024-06-20T14:30:00.000Z"
      },
      "errorResponses": [
        {
          "status": 400,
